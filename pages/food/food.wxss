/* pages/food/food.wxss */

.food-classify-box {
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
    background-color: #fff;
    border-bottom: 1px solid #ddd;
}


.food-classify-box .food-title {
    text-align: center;
    font-size: 16px;
    height:70rpx;
    line-height:70rpx;
}

.food-list-box {
    display: flex;
    flex-wrap: wrap;
    width: 720rpx;
    margin: 0 auto;
}
.food-item {
    width: 31%;
    text-align: center;
    padding: 0 8rpx 0;
}

.food-image {
    display: block;
    width: 100%;
    height: 150rpx;
}

.food-name,
.food-price {
  font-size: 28rpx;
}


